.container {
    width: 100%;
    max-width: 950px;
    background-color: var(--color-surface);
    border-radius: 24px; /* Softer corners */
    box-shadow: 0 10px 30px var(--shadow-color);
    border: 1px solid rgba(255, 255, 255, 0.5);
    padding: 4rem 5rem; /* More padding */
    position: relative;
    transition: background-color 0.3s, box-shadow 0.3s;
    margin: 3rem auto;
    min-height: calc(100vh - 6rem);
}

.logo-container {
    height: 150px;
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
}

.header-logo-img {
    max-height: 100%;
    max-width: 100%;
    object-fit: contain;
}

header {
    text-align: center;
    margin-bottom: 1rem;
}

header h1 {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    color: var(--color-accent); /* Chocolate Brown */
    transition: color 0.3s;
}

header h2 {
    font-family: var(--font-body);
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--color-text);
    opacity: 0.8;
}

section {
    margin-bottom: 3rem;
}

.form-step section:last-of-type {
    margin-bottom: 0;
}

section h3 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--color-accent);
    padding-bottom: 0.75rem;
    margin-bottom: 2rem;
    border-bottom: 2px dashed var(--color-border);
    transition: color 0.3s, border-color 0.3s;
}